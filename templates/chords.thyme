<!DOCTYPE html SYSTEM "http://www.thymeleaf.org/dtd/xhtml1-strict-thymeleaf-4.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xmlns:th="http://www.thymeleaf.org">
	<head th:replace="header.thyme::head"/>
	<body onload="prettyPrint()">
	<div class="container">
		<div th:replace="menu.thyme::menu"/>
		<div class="section">
			<div class="">
                <div class="columns is-vcentered">
                    <div class="column has-text-left">
                        <h3 class="title" title="Título (Title)">
                            <i class="fa-fw fal fa-music"></i>
                            [[ ${content.title} ]]
                        </h3>
                        <h4 class="subtitle" title="Artista (Artist)">
                            <i class="fa-fw fal fa-microphone-alt"></i>
                            <strong>[[ ${#strings.isEmpty(content.artista)} ? 'Desconhecido' : ${content.artista} ]]</strong>
                        </h4>
                    </div>
                    <div class="column has-text-right">
                        <div title="Áudio" th:if="${!#strings.isEmpty(content.audio)}">
                            <a th:href="${content.audio}" th:text="${content.audio}">audio link</a>
                            <!-- <audio controls th:src="${content.audio}">audio</audio> -->
                            <i class="fa-fw fal fa-waveform"></i>
                        </div>
                        <div title="Vídeo" th:if="${!#strings.isEmpty(content.video)}">
                            <a th:href="${content.video}" th:text="${content.video}">video link</a>
                            <i class="fa-fw fal fa-tv-music"></i>
                            <!-- <iframe width="200" height="150" src="https://www.youtube.com/embed/9u-4H5qycgw" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe> -->
                        </div>
                    </div>
                </div>
                <div class="columns has-text-centered">
                    <div class="column has-text-left" title="Tom">
                        <i class="fa-fw fal fa-list-music has-text-info"></i>
                        <strong th:if="${#strings.isEmpty(content.tom)}">N/I</strong>
                        <strong th:unless="${#strings.isEmpty(content.tom)}" th:text="${content.tom}">tom</strong>
                    </div>
                    <div class="column has-text-centered" title="Instrumentos">
                        <i class="fa-fw fad fa-guitars has-text-info"></i>
                        <th:block th:if="${!#strings.isEmpty(content.instrumentos)}">
                            <th:block th:if="${#strings.contains(content.instrumentos, 'violão')}">
                                <i class="fa-fw fal fa-guitar" title="Violão"></i>
                            </th:block>
                            <th:block th:if="${#strings.contains(content.instrumentos, 'guitarra')}">
                                <i class="fa-fw fal fa-guitar-electric" title="Guitarra"></i>
                            </th:block>
                            <th:block th:if="${#strings.contains(content.instrumentos, 'baixo')}">
                                <i class="fas fa-guitar-electric" title="Baixo"></i>
                            </th:block>
                            <th:block th:if="${#strings.contains(content.instrumentos, 'teclado')}">
                                <i class="fa-fw fal fa-piano-keyboard" title="Teclado"></i>
                            </th:block>
                            <th:block th:if="${#strings.contains(content.instrumentos, 'bateria')}">
                                <i class="fa-fw fal fa-drum" title="Bateria"></i>
                            </th:block>
                            <th:block th:if="${#strings.contains(content.instrumentos, 'violino')}">
                                <i class="fa-fw fal fa-violin" title="Violino"></i>
                            </th:block>
                        </th:block>
                    </div>
                    <div class="column has-text-right" title="Álbum">
                        <i class="fa-fw fal fa-album has-text-info"></i>
                        <strong>[[ ${#strings.isEmpty(content.album)} ? 'N/I' : ${content.album} ]]</strong>
                    </div>
                </div>
            </div>

            <div class="chords">
                [( ${content.body} )]
            </div>


            <p class="text-right" title="Compositor (Composer)">
                <i class="fa-fw fal fa-user-music has-text-info"></i>
                <strong>[[ ${#strings.isEmpty(content.compositor)} ? 'Desconhecido' : ${content.compositor} ]]</strong>
            </p>

            <p><em th:text='${#dates.format(content.date,"dd MMMM yyyy")}'>date</em></p>

			<hr />

		</div>
	</div>
	<div th:replace="footer.thyme::footer"></div>
    </body>
</html>