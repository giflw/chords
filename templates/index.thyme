<!DOCTYPE html SYSTEM "http://www.thymeleaf.org/dtd/xhtml1-strict-thymeleaf-4.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:th="http://www.thymeleaf.org">
    <head th:replace="header.thyme::head"/>
    <body onload="prettyPrint()">
    <div>
        <div th:replace="menu.thyme::menu"/>

        <div class="container">
            <h3 class="title">Cifras</h3>

            <ul id="chords-list">
                <li th:each="post: ${published_content}" th:if="${#strings.equals(post.type, 'chords')}" class="py-3" style="border-top: solid 1px; border-bottom: solid 1px; margin-bottom: -1px;">
                    <a th:href="${post.uri}" style="padding: 0 3em;">
                        <span>
                            <i class="fa-fw fas fa-badge-check has-text-success" th:if="${post.verificado}"></i>
                            <i class="fa-fw fal fa-badge has-text-grey" th:unless="${post.verificado}"></i>
                            <i class="fa-fw fas fa-music"></i>
                            <span style="font-variant: small-caps">
                                [[ ${post.title} ]]
                            </span>
                        </span>
                        <span>
                            <span class="tag is-primary is-light mx-1" th:each="tag: ${post.tags}">
                                <small>[[ ${tag} ]]</small>
                            </span>
                        </span>
                        <span style="float: right">
                            [[ ${post.artista} ?: 'Desconhecido' ]]
                            <i class="fa-fw fas fa-microphone"></i>
                        </span>
                    </a>
                    <div style="clear: both;"></div>
                </li>
            </ul>
        </div>
    </div>
    <script>
        const list = document.getElementById('chords-list');

        const items = list.childNodes;
        const itemsArr = [];
        for (let i in items) {
            if (items[i].nodeType == 1) { // get rid of the whitespace text nodes
                itemsArr.push(items[i]);
            }
        }

        itemsArr.sort((a, b) => {
            return a.textContent == b.textContent
                ? 0
                : (a.textContent > b.textContent ? 1 : -1);
        });

        for (i = 0; i < itemsArr.length; ++i) {
            list.appendChild(itemsArr[i]);
        }
    </script>

    <div th:replace="footer.thyme::footer"></div>
    </body>
</html>
